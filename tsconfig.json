{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "build",
    "lib": [
      "es6",
      "es7",
      "dom"
    ]
  },
  "baseUrl": "src/",
  // Relative to "baseUrl" 
  "paths": {
    "@components/*": [
      "common/components/*"
    ],
    "@common/*":
    [
      "common/*"
    ],
    "@/*": [
      "./*"
    ],
    "@features/*": [
      "./features/*"
    ],
    "@config/*": [
      "config/*"
    ]
  },
  "exclude": [
    "dist",
    "build"
  ]
}